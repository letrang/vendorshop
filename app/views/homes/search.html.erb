<div class="col-sm-3 col-md-2 sidebar">
  <%= render "//shared/category", categories: @categories, category_active: nil %>
</div>

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <table class="table table-striped table-hover">
    <thead></thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td>
          <a href="/homes/<%= product.id %>/product_detail" class="thumbnail">
            <%= image_tag product.photo.url(:thumb), alt: product.name%>
          </a>
        </td>
        <td>
          <div class="title"><%= product.name %></div>
          <div class="price">Â¥<%= product.price %></div>
          <div class="product-group-button">
            <a href="/homes/<%= product.id %>/product_detail" class="btn btn-info">Detail</a>
            <a href="/homes/<%= product.id %>/add_cart" class="btn btn-success add-cart">Buy</a>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>